@model IEnumerable<RoutingLookup.Models.Bank>
@{
    ViewBag.Title = "Results";
}

<h2>Banks</h2>

@if (Model.Count() == 0) {
	<div>No results found.</div>
} else {
	var first = Model.FirstOrDefault();
	@Html.DisplayFor(model => first, "BankListHeader", null)
	foreach (var bank in Model)
	{
		@Html.DisplayFor(model => bank, "BankListItem", null)
	}
}